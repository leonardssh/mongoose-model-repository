    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/sinon": "^10.0.11",
    "chai": "^4.3.6",
    "mocha": "^9.2.2",
    "prettier": "^2.5.1",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "mongodb": "^4.4.1",
